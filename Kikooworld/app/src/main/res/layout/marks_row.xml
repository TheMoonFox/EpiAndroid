<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0f1ff"
    android:padding="15dp">

    <TextView
        android:id="@+id/titlemodule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#398dbd"
        android:textStyle="bold"
        tools:text="@string/dummyTestText"
        android:textSize="14sp"
        android:layout_below="@+id/titletitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="@string/dummyTestText"
        android:layout_below="@+id/correcteur"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/titletitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="@string/dummyTestText"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/correcteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="@string/dummyTestText"
        android:layout_below="@+id/titlemodule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/final_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3a8ebd"
        tools:text="@string/dummyTestText"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>